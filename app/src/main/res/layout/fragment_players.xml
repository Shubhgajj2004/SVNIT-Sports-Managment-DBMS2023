<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Sports.PlayersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="Ranking"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <AutoCompleteTextView
            android:id="@+id/rankingFilter"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/foreground_color"
            android:hint="Ranking"
            android:paddingHorizontal="15dp"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:textColorHint="#D6D6D6"
            android:background="@drawable/round_outline_small"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_profile_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" />


    </LinearLayout>




</RelativeLayout>